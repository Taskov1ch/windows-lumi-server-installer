{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Lumi Servers Manager",
	"version": "0.0.2",
	"identifier": "com.taskov1ch.lumi-servers-manager",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Lumi Servers Manager",
				"width": 800,
				"height": 600,
				"minHeight": 600,
				"minWidth": 800
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": [
			"nsis",
			"appimage"
		],
		"icon": [
			"icons/128x128.png",
			"icons/256x256.png",
			"icons/icon.ico"
		],
		"windows": {
			"nsis": {
				"languages": [
					"Russian",
					"English"
				],
				"displayLanguageSelector": false,
				"installerIcon": "icons/icon.ico",
				"installMode": "both"
			}
		},
		"linux": {
			"appimage": {
				"bundleMediaFramework": false,
				"files": {}
			}
		}
	}
}